<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	
		<record id="account_view_move_form_inherit" model="ir.ui.view">
			<field name="name">account.move.form.inherit</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='invoice_line_ids']//list//field[@name='name']" position="after">
					<field name="is_hilti" column_invisible="1"/>
					<field name="pf_gst_per" readonly="is_hilti == False"/>
				</xpath>
				<xpath expr="//field[@name='invoice_line_ids']//list//field[@name='price_subtotal']" position="before">
					<field name="pf_gst_amount" readonly="is_hilti == False"/>
				</xpath>
			</field>
		</record>
	
	</data>
</odoo>