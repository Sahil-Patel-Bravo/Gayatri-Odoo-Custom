<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	
		<record id="purchase_purchase_order_form_inherit" model="ir.ui.view">
			<field name="name">purchase.order.form.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='order_line']//list//field[@name='name']" position="after">
					<field name="is_hilti" column_invisible="1"/>
					<field name="pf_gst_per" readonly="is_hilti == False"/>
				</xpath>
				<xpath expr="//field[@name='order_line']//list//field[@name='price_subtotal']" position="before">
					<field name="pf_gst_amount" readonly="is_hilti == False"/>
				</xpath>
			</field>
		</record>
	
	</data>
</odoo>