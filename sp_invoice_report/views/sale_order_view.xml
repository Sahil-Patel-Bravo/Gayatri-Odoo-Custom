<?xml version="1.0" ?>
<odoo>

	<record id="view_order_form_inherit_po_info" model="ir.ui.view">
		<field name="name">sale.order.form.inherit.po.info</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='other_information']" position="inside">
				<group string="Other Information">
					<group>
						<field name="po_no"/>
						<field name="po_date"/>
						<field name="transport"/>
						<field name="lr_no"/>
						<field name="lr_date"/>
					</group>
				</group>
			</xpath>
		</field>
	</record>

</odoo>
