<?xml version="1.0" ?>
<odoo>

	<record id="wizard_import_pricelist_rules_form" model="ir.ui.view">
		<field name="name">import.pricelist.rules.form</field>
		<field name="model">import.pricelist.rules</field>
		<field name="arch" type="xml">
			<form string="Import Pricelist Rules">
				<group>
					<group>
						<field name="name" required="1"/>
					</group>
					<group>
						<field name="file"/>
					</group>
				</group>
				<footer>
					<button class="btn-primary" type="object" name="action_import" string="Import"/>
					<button class="btn-default" special="cancel" string="Cancel"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_import_pricelist_rules" model="ir.actions.act_window">
		<field name="name">Import Pricelist Rules</field>
		<field name="res_model">import.pricelist.rules</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_import_pricelist_rules" name="Import Pricelist Rules" action="action_import_pricelist_rules" parent="sale.product_menu_catalog"/>
  
</odoo>