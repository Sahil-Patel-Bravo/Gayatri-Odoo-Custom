<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		
		<!-- explicit list view definition -->
		<record model="ir.ui.view" id="list_employee_petty_cash">
			<field name="name">hr.employee.petty.cash</field>
			<field name="model">hr.employee</field>
			<field name="arch" type="xml">
				<list create="0" delete="0" duplicate="0">
					<field name="name" />
					<field name="petty_cash_balance" />
				</list>
			</field>
		</record>

		<!-- actions opening views on models -->
		<record model="ir.actions.act_window" id="action_petty_cash_employee_balance">
			<field name="name">Employee Petty Cash Balance</field>
			<field name="res_model">hr.employee</field>
			<field name="view_mode">list</field>
			<field name="view_id" ref="sp_petty_cash_management.list_employee_petty_cash" />
		</record>
	
	</data>
</odoo>