<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="sequence_cash_request_seq" model="ir.sequence">
            <field name="name">Cash request sequence</field>
            <field name="code">petty.cash.request</field>
            <field name="prefix">CR/%(year)s/</field>
            <field name="padding">5</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="False" name="company_id"/>
        </record>

        <record id="sequence_cash_expense_seq" model="ir.sequence">
            <field name="name">Cash expense sequence</field>
            <field name="code">petty.cash.expense</field>
            <field name="prefix">CE/%(year)s/</field>
            <field name="padding">5</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field eval="False" name="company_id"/>
        </record>

    </data>
</odoo>